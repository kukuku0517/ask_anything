<%=form_tag edit_update_path(@post.id),method: :post do%>
<div class="form-group">
    <%= label_tag 'title',"제목"%>
    <%= text_field_tag 'title',@post.title,class: "form-control",placeholder: "제목을 입력하세요", required: true %>
</div>
<div class="form-group">
    <%= label_tag 'content',"내용"%>
    <%= text_field_tag 'content',@post.content,class: "form-control",placeholder: "내용을 입력하세요", required: true %>
</div>
<div class="form-group">
    <%= label_tag 'hashtags',"제목"%>
    <%= text_field_tag 'hashtags',@hashtags,class: "form-control",placeholder: "태그을 입력하세요" %>
</div>
<%= button_tag '제출',type: "submit",class:"btn btn-default"%>

<%end%>